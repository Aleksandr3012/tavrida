extends ../templates/template.pug
block content
  +header
  .wrapper
    .team.team--lg
      .team__front.team__front--castings.team__front--lg(style="background-image: url(./img/castings-front.jpg);")
        +header-inner({
          modifier: 'newest'
        }).header-inner--alone
        .container.team__front-wrapper
          a.team__front-back(href="#")
          .team__front-content
            .team__front-main
              h1.team__front-title.mb-40.mb-xl-0 КАСТИНГИ
              .team__front-comment По всем вопросам: 
                a(href="#") cast@crki.art
            .team__front-info.team__front-info--castings
              h5.text-white.mb-20.mb-xl-35.text-transform-none.font-secondary.font-weight-bold Единственная кастинг- платформа в России, объединяющая прослушивания, отборы и собеседования на стажировки от ведущих игроков арт-индустрии и медиакомпаний
    .container.mt-40.mt-lg-90
      h2.h2--default.text-dark.font-secondary.mb-30.mb-lg-60 Направления кастингов
      .row.justify-content-center
        .col-sm-6.col-xl-4
          +casting-type({
            icon: 'casting-icon-1.svg',
            title: 'Музыка'
          })
        .col-sm-6.col-xl-4
          +casting-type({
            icon: 'casting-icon-2.svg',
            title: 'Хореография'
          })
        .col-sm-6.col-xl-4
          +casting-type({
            icon: 'casting-icon-3.svg',
            title: 'Театр и кино'
          })
        .col-sm-6.col-xl-4
          +casting-type({
            icon: 'casting-icon-4.svg',
            title: 'Литература'
          })
        .col-sm-6.col-xl-4
          +casting-type({
            icon: 'casting-icon-5.svg',
            title: 'Юмор'
          })
        .col-sm-6.col-xl-4
          +casting-type({
            icon: 'casting-icon-6.svg',
            title: 'АРТ'
          })
        .col-sm-6.col-xl-4
          +casting-type({
            icon: 'casting-icon-7.svg',
            title: 'Медиа'
          })
        .col-sm-6.col-xl-4
          +casting-type({
            icon: 'casting-icon-8.svg',
            title: 'Ивент'
          })
    .container
      .row
        .col-lg-10.mx-auto
          +announcement
    +partners({
      modifier: 'new'
    }).partners--new
    +footer
