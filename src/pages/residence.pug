    .container.container--default
      h2.h2--default.mt-15.text-dark.mb-30.mb-lg-90.font-secondary ИНФРАСТРУКТУРА
      .row
        .col-sm-6.col-lg-4
          +field({
            icon: 'field-10.svg',
            dscr: 'Культурный центр с концертным залом'
          })
