extends ../templates/template.pug
block content
  +header
  .wrapper
    .residence
      +hero({
        title: 'АРТ-РЕЗИДЕНЦИЯ «ТАВРИДА»',
        comment: '* эскиз проекта',
        bg: 'hero-2.jpg',
        modifier: 'commented'
      }).hero--commented
    .container.container--default
      .row
        .col-lg-10.offset-lg-1 
