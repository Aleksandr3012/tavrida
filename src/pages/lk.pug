extends ../templates/template.pug
block content
  +header
  .wrapper
    .cabinet
      .cabinet__content
        .container
          .cabinet__header
            .cabinet__header-content
              a.link-back.link-back--dark(href="#")
              h2.h2--default.mb-0.text-dark Личный кабинет
            a.cabinet__logout(href="#") Выйти
        
          .row.flex-column-reverse.flex-xml-row
            .col-xml-9
              ul.nav.nav-tabs.nav-tabs--lk.mb-30
                li.nav-item
                  a.nav-link.active(data-toggle='tab', href='#lk1', role='tab', aria-selected='true') Заявки
                li.nav-item
                  a.nav-link(data-toggle='tab', href='#lk2', role='tab', aria-selected='false') Мероприятия
                li.nav-item
                  a.nav-link.nav-link--notification(data-toggle='tab', href='#lk3', role='tab', aria-selected='false') Пройти опрос
                li.nav-item
                  a.nav-link(data-toggle='tab', href='#lk4', role='tab', aria-selected='false') Полезные материалы
                li.nav-item
                  a.nav-link(data-toggle='tab', href='#lk5', role='tab', aria-selected='false') Связаться с Тавридой
              .tab-content
                #lk1.tab-pane.fade.show.active(role='tabpanel')
                  +applications({
                    modifier: 'new'
                  })
                  a.btn.btn-green.mt-45(href="#") Новая заявка
                #lk2.tab-pane.fade(role='tabpanel')
                  +lk-event({
                    picture: 'lk-1.jpg',
                    title: 'Фестиваль «Таврида — АРТ»',
                    dscr: 'Место творчества и вдохновения! Участников фестиваля ждут ежедневные кастинги, грантовый конкурс, знакомство с единомышленниками, обмен идеями, творческие коллаборации и создание коллективных арт-манифестов.'
                  })
                  +lk-event({
                    picture: 'lk-2.jpg',
                    title: 'Форум молодых деятелей культуры искусства «Таврида»',
                    dscr: 'Ежегодно Форум объединяет творческих и креативных людей со всей России. Это место, где знакомятся, учатся, творят, обмениваются идеями, начинают свою карьеру и становятся друзьями.'
                  })
                  +lk-event({
                    picture: 'lk-3.jpg',
                    title: 'Грантовый конкурс',
                    dscr: 'Грантовый конкурс на «Тавриде» — возможность получить финансовую поддержку творческого проекта! В 2020 году победители конкурса получат до 3 млн. рублей на реализацию идей.'
                  })
                #lk3.tab-pane.fade(role='tabpanel')
                  h4.mb-30 Заголовок опроса в несколько строк для наглядности
                  .lk__quiz-steps-wrapper
                    .lk__quiz-step.lk__quiz-step--active
                    .lk__quiz-step.lk__quiz-step--active
                    .lk__quiz-step
                    .lk__quiz-step
                    .lk__quiz-step
                    .lk__quiz-step
                    .lk__quiz-step
                    .lk__quiz-step
                    .lk__quiz-step-number
                      span 2 
                      | из 8
                  form.lk__quiz-question(action="#", method="POST")
                    .lk__quiz-question-header
                      h4.mb-0.mr-10.mr-lg-30 2
                      p.p--xs Вопрос опроса часть входной группы территории Тавриды, который представляет собой арку
                    .custom-control.custom-radio
                      input#answer1.custom-control-input(type='radio', name='answer')
                      label.custom-control-label(for='answer1') Ответ первый
                    .custom-control.custom-radio
                      input#answer2.custom-control-input(type='radio', name='answer')
                      label.custom-control-label(for='answer2') Второй ответ подлинее
                    .custom-control.custom-radio
                      input#answer3.custom-control-input(type='radio', name='answer')
                      label.custom-control-label(for='answer3') Третий ответ
                    button.btn.btn-green(type="submit") Далее
                #lk4.tab-pane.fade(role='tabpanel')
                  h4.mb-20.mb-lg-50 Документы
                  .row
                    .col-sm-6.col-lg-5
                      +document({
                        title: 'Название файле или его содержимого для актуализации информации'
                      })
