mixin registration(data)
  .registration&attributes(attributes)
    .container
      h2.h2--default.text-white.mb-15 Регистрация на фестиваль
      form.form(action="#", method="POST")
        .row
          .col-lg-3
            .form__item.form-group
              label.form__label Фамилия
              input.input.form-control(type="text", placeholder="Введите вашу фамилию")
          .col-lg-3
            .form__item.form-group
              label.form__label Имя
              input.input.form-control(type="text", placeholder="Введите ваше имя")
          .col-lg-3
            .form__item.form-group
              label.form__label Отчество
              input.input.form-control(type="text", placeholder="Введите ваше отчество")
        .row
          .col-lg-3
            .form__item.form-group
              label.form__label Телефон
              input.input.form-control(type="text", placeholder="+7 ( ___ ) ___ - __ - __")
          .col-lg-3
            .form__item.form-group
              label.form__label E-mail
              input.input.form-control(type="text", placeholder="sample@sample.com")
        if data && data.modifier == 'festival'
          .registration__type
            .registration__type-top
              .registration__type-header Выберите тип участия
              .registration__type-content
                .custom-control.custom-radio
                  input#type1.custom-control-input(type='radio', name='type')
                  label.custom-control-label(for='type1') Зритель
                .custom-control.custom-radio
                  input#type2.custom-control-input(type='radio', name='type')
                  label.custom-control-label(for='type2') Участник
                .custom-control.custom-radio
                  input#type3.custom-control-input(type='radio', name='type')
                  label.custom-control-label(for='type3') Партнер
          .row
            .col-lg-8
              .registration__type-dscr
                p.registration__type-dscr-item.registration__type-dscr-item--active Участник это - считает, что после принятия этого закона, когда люди раньше начнут выходить на пенсию, возникнет более 1,5 млн. безработных. Их не удастся быстро трудоустроить. Так быстро новые трудовые места не появятся
          .row
            .col-lg-3
              .form__item.form-group
                label.form__label О себе
                textarea.input.input--textarea.form-control(placeholder="Расскажите нам о себе")
            .col-lg-3
              .form__item.form-group
