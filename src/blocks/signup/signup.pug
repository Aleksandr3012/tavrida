mixin signup(data)
  if data && data.modifier == 'login'
    .signup&attributes(attributes)
      a.signup__close(href="#")
      h2.h2--default.mb-30 Авторизация
      .signup__content
        form.form(action="#", method="POST")
          .row
            .col-lg-4
              .form__item.form-group
                label.form__label Email
                input.input.form-control(type="email", placeholder="Введите логин")
            .col-lg-4
              .form__item.form-group
                label.form__label Пароль
                input.input.form-control(type="password", placeholder="Введите пароль")
          .form__footer
            button.btn.btn-primary.btn-green(type="submit") Вход
